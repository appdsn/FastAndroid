<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dia_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    android:background="@drawable/common_dialog_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <!--标题-->
    <TextView
        android:id="@+id/dia_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:gravity="center"
        android:text="我是标题"
        android:textColor="#343434"
        android:textSize="18sp" />
    <!--标题分割线-->
    <View
        android:id="@+id/dia_line_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@color/fun_line" />

    <!--中间内容-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:minHeight="70dp"
        android:orientation="vertical"
        android:padding="14dp">
        <!--图标-->
        <ImageView
            android:id="@+id/dia_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />
        <!--提示内容文本-->
        <TextView
            android:id="@+id/dia_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="50dp"
            android:text="正文文本正文文本正文文本正文文本"
            android:textColor="#CC191A38"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!--确认按钮分割线-->
    <View
        android:id="@+id/dia_line_middle"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/fun_line" />
    <!--确定按钮-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <!--取消-->
        <TextView
            android:id="@+id/dia_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1"
            android:text="Cancel"
            android:textColor="#99191A38"
            android:textSize="15sp" />
        <!--取消和同意分割线-->
        <View
            android:id="@+id/dia_line_bottom"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/fun_line" />
        <!--同意-->
        <TextView
            android:id="@+id/dia_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1"
            android:text="Confirm"
            android:textColor="#2AB2EC"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>