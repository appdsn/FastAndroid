        android:theme="@style/AppTheme">
        <activity android:name=".http.HttpDemoActivity"></activity>
        <activity android:name=".base.BaseIntroDemoActivity" />
        <activity android:name=".base.EmptyDemoActivity" />
        <activity android:name=".base.TitleBarDemoActivity" />
